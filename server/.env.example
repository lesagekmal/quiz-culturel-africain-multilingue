# ========================================================
# TEMPLATE DE CONFIGURATION - QUIZ CULTUREL AFRICAIN
# ========================================================
# ⚠️ NE METTEZ JAMAIS DE CLÉS DE PRODUCTION ICI !
# Les clés réelles vont UNIQUEMENT dans Vercel

# 🔐 FEDAPAY CONFIGURATION (SANDBOX SEULEMENT)
# Obtenez vos clés sandbox sur : https://dashboard.fedapay.com
FEDAPAY_API_KEY=sk_test_votre_clé_api_sandbox_ici
FEDAPAY_PUBLIC_KEY=pk_test_votre_clé_publique_sandbox_ici
FEDAPAY_MODE=sandbox  # 'sandbox' pour développement, 'live' pour production

# 🌐 SERVER CONFIGURATION
PORT=3000
NODE_ENV=development  # 'development' ou 'production'
ALLOWED_ORIGINS=http://localhost:3000

# 🔒 SECURITY CONFIGURATION
# Générez des secrets forts avec cette commande Node.js :
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=votre_secret_session_32_caractères_minimum
WEBHOOK_SECRET=votre_secret_webhook_32_caractères_minimum

# 💾 CACHE CONFIGURATION
CACHE_DURATION=3600000  # 1 heure en millisecondes

# 📊 LOGGING (optionnel)
LOG_LEVEL=info  # error, warn, info, debug
LOG_TO_FILE=false
